<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@color/colorVerde"
    card_view:cardCornerRadius="20dp"
    android:backgroundTint="@color/colorAjustes"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/colorAmarillo"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/tvImagen"
                android:layout_width="81dp"
                android:layout_height="107dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="3dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/reciclemosj" />

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tvImagen"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="41dp">

                    <TextView
                        android:id="@+id/tvTitulo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/san_francisco"
                        android:paddingTop="8dp"
                        android:text="Empresa: "
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/tvTitulo1"
                        android:fontFamily="@font/san_francisco"
                        android:paddingTop="6dp"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp">

                    <TextView
                        android:id="@+id/tvDescripcion1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/san_francisco"
                        android:text="Descripción: "
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/tvDescripcion1"
                        android:fontFamily="@font/san_francisco"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="italic" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:id="@+id/tvUbi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/san_francisco"
                        android:text="Ubicación: "
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUbicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toEndOf="@+id/tvUbi"
                        android:fontFamily="@font/san_francisco"
                        android:textColor="#E2E3EA"
                        android:textSize="14sp" />
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
